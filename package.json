{
  "name": "server-node-exercise",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "pnpm run test:unit",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up ",
    "docker:release": "docker compose -f docker-compose.yml -f docker-compose.release.yml up --build",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx scripts/seed-db.script.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.3",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.9.12",
    "ms": "^2.1.3",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.7.1",
    "@types/ms": "^2.1.0",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.5",
    "testcontainers": "^11.7.1",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
